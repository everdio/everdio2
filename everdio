#!/usr/bin/env php

<?php
\ini_set("memory_limit", "1536M");
\ini_set("display_errors", 1);

include_once(__DIR__ . \DIRECTORY_SEPARATOR . "everdio.php");

$cli = new \Component\Core\Controller\Model\Cli;
$cli->server = $_SERVER;
$cli->path = __DIR__;
$cli->setup();

echo $cli->echo("Everdio Commandline", ["bright", "green", "underline"]) . \PHP_EOL . \PHP_EOL;
if (!isset($cli->route)) {
    echo $cli->echo("Nothing to execute", ["red"]) . \PHP_EOL . \PHP_EOL;    
    exit;
}

echo $cli->echo(\sprintf("Processing `%s`", $cli->route), ["yellow", "blackbg", "bright"]) . \PHP_EOL . \PHP_EOL;
try {
    echo $cli->execute(\DIRECTORY_SEPARATOR . $cli->route) . \PHP_EOL;
} catch (\Exception $ex) {
    if (isset($cli->request->_debug)) {
        throw new \RuntimeException($ex->getMessage(), 0, $ex);
    }

    echo $cli->echo($ex->getMessage(), ["red", "blackbg"]) . \PHP_EOL . \PHP_EOL;
}

echo $cli->echo(\sprintf("Processed in %ss with %s memory consumption", $cli->getTime(), $cli->getMemory()), ["bright", "yellow"]) . \PHP_EOL;
exit;