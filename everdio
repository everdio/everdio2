#!/usr/bin/env php
<?php

\ini_set("memory_limit", "2048M");
\date_default_timezone_set("Europe/Amsterdam");
\setlocale(\LC_TIME, "nl_NL.utf8");
\ini_set('intl.default_locale', 'nl-NL');
\ini_set('display_errors', '1');

include_once(__DIR__ . \DIRECTORY_SEPARATOR . "everdio.php");

$command = new \Application\Command;

try {
    $command->server = $_SERVER;
    $command->debug = "_debug";
    $command->path = __DIR__;
    
    \pcntl_async_signals(true);
    \pcntl_signal(\SIGINT, [$command, "terminate"]);
    \pcntl_signal(\SIGTERM, [$command, "terminate"]);

    $command->setup();
    
    echo $command->execute(\DIRECTORY_SEPARATOR . $command->arguments);
} catch (\Exception | \Error $ex) {
    echo \sprintf("\n%s catched %s\n\n", \get_class($ex), \ucfirst($ex->getMessage()));
    if (isset($command->debug) && isset($command->request->{$command->debug})) {
        echo \sprintf("\n%s\n", $ex->getTraceAsString());
        if ($ex->getPrevious()) {
            echo \sprintf("\n%s: %s\n\n%s\n", \get_class($ex->getPrevious()), \ucfirst($ex->getPrevious()->getMessage()), $ex->getPrevious()->getTraceAsString());
        }
    }
}

exit;
