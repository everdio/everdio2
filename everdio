#!/usr/bin/env php

<?php
\ini_set("memory_limit", "1536M");
\ini_set("display_errors", 1);

include_once(__DIR__ . \DIRECTORY_SEPARATOR . "everdio.php");

$cli = new \Component\Core\Controller\Model\Cli;
$cli->server = $_SERVER;
$cli->path = __DIR__;
$cli->setup();

$cli->echo("Everdio Commandline", ["bright", "green", "underline"], \PHP_EOL . \PHP_EOL);
if (!isset($cli->execute)) {
    $cli->echo("Nothing to execute", ["red"], \PHP_EOL . \PHP_EOL);
    exit;
}

$cli->echo(\sprintf("Processing `%s`", $cli->execute), ["yellow", "blackbg", "bright"], \PHP_EOL . \PHP_EOL);

try {
    $cli->execute(\DIRECTORY_SEPARATOR . $cli->execute);
} catch (\Exception $ex) {
    if (isset($cli->request->_debug)) {
        throw new \RuntimeException($ex->getMessage(), 0, $ex);
    }

    $cli->echo($ex->getMessage(), ["red", "blackbg"], \PHP_EOL . \PHP_EOL);
}

$cli->echo(\sprintf("Processed in %ss with %s memory consumption", $cli->getTime(), $cli->getMemory()), ["bright", "yellow"]);
exit;