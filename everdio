#!/usr/bin/env php

<?php
\ini_set("memory_limit", "1536M");
\ini_set("display_errors", 1);

include_once(__DIR__ . \DIRECTORY_SEPARATOR . "everdio.php");

$cli = new \Component\Core\Controller\Model\Cli;
$cli->pm = "php";
$cli->server = $_SERVER;
$cli->path = __DIR__;
$cli->debug = "_debug";
$cli->setup();
$cli->throttle();

$cli->echo("Everdio2 Commandline", ["bright", "green", "bold", "underline"]);
$cli->breaks(2);
if (!isset($cli->execute)) {
    $cli->echo("Provide a valid execute path ..", ["white", "bold"]);
    $cli->breaks(2);
    exit;
}

$cli->echo(\sprintf("Processing "), ["white", "bright"]);
$cli->echo(\sprintf("`%s`", $cli->execute), ["green"]);
$cli->echo(\sprintf(" with pid ", $cli->execute), ["white", "bold"]);
$cli->echo(\sprintf("`%s`", $cli->pid), ["green"]);
$cli->breaks(2);

try {
    $cli->execute(\DIRECTORY_SEPARATOR . $cli->execute);
} catch (\Exception $ex) {
    if (isset($cli->request->{$cli->debug})) {
        throw new \RuntimeException($ex->getMessage(), 0, $ex);
    }
    $cli->breaks(1);
    $cli->echo($ex->getMessage(), ["red", "bold"]);
    $cli->breaks(3);
}

$cli->echo(\sprintf("Done in %ss with %s memory consumption", $cli->getTimer(), $cli->getSizeformat(\memory_get_peak_usage(true))), ["bold", "white"]);
$cli->breaks(2);
exit;